{
  "name": "arraypress/wp-file-utils",
  "version": "1.0.0",
  "description": "A comprehensive WordPress library for file operations, path manipulation, MIME type handling, and secure filesystem operations.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/arraypress/wp-file-utils/",
  "authors": [
    {
      "name": "David Sherlock",
      "homepage": "https://arraypress.com/"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "ArrayPress\\FileUtils\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/arraypress/wp-file-utils/issues",
    "source": "https://github.com/arraypress/wp-file-utils"
  },
  "keywords": [
    "wordpress",
    "file",
    "filesystem",
    "mime",
    "path",
    "security",
    "file-operations",
    "arraypress"
  ]
}